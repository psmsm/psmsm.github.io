/* Minimal Professional Design - Financial Style */

/* Root variables */
:root {
  --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Apple SD Gothic Neo', 'Malgun Gothic', sans-serif;
  --font-mono: 'SF Mono', 'Monaco', 'Menlo', 'Courier New', monospace;
  --color-accent: #047857;
  --color-text: #111827;
  --color-text-light: #6b7280;
  --color-border: #e5e7eb;
  --spacing: 1.5rem;
}

/* Base typography */
body {
  font-family: var(--font-sans) !important;
  font-size: 16px !important;
  line-height: 1.75 !important;
  color: var(--color-text) !important;
  letter-spacing: -0.003em;
  font-weight: 400;
}

/* Headings - Minimal style */
h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-sans) !important;
  font-weight: 600 !important;
  letter-spacing: -0.015em;
  margin-top: 2rem !important;
  margin-bottom: 1rem !important;
  color: var(--color-text) !important;
}

h1 {
  font-size: 2rem !important;
  font-weight: 600 !important;
  line-height: 1.3 !important;
}

h2 {
  font-size: 1.5rem !important;
  margin-top: 2.5rem !important;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid var(--color-border);
}

h3 {
  font-size: 1.25rem !important;
  font-weight: 600 !important;
}

/* Code blocks - Clean minimal */
code {
  font-family: var(--font-mono) !important;
  font-size: 0.875em !important;
  background: #f9fafb !important;
  padding: 0.15em 0.4em !important;
  border-radius: 3px !important;
  border: 1px solid #e5e7eb !important;
  color: #374151 !important;
}

pre {
  font-family: var(--font-mono) !important;
  font-size: 0.875rem !important;
  line-height: 1.6 !important;
  background: #f9fafb !important;
  border: 1px solid var(--color-border) !important;
  padding: 1.25rem !important;
  border-radius: 4px !important;
  overflow-x: auto;
  margin: 1.5rem 0 !important;
}

pre code {
  background: transparent !important;
  padding: 0 !important;
  border: none !important;
  color: #111827 !important;
}

/* Links - Subtle */
a {
  color: var(--color-text) !important;
  text-decoration: none !important;
  transition: color 0.15s ease;
  border-bottom: 1px solid var(--color-border);
}

a:hover {
  color: var(--color-accent) !important;
  border-bottom-color: var(--color-accent) !important;
}

/* Content layout - Wider when no sidebar */
.page__content {
  font-size: 16px !important;
  max-width: 800px;
  margin: 0 auto;
}

.page__content p {
  margin-bottom: 1.25rem;
  line-height: 1.75;
}

/* Full width content when author profile is hidden */
.page {
  width: 100% !important;
  max-width: 100% !important;
}

.page__inner-wrap {
  max-width: 1280px !important;
  margin: 0 auto !important;
  padding: 0 2rem !important;
}

@media (min-width: 64em) {
  .page__content {
    max-width: 900px;
    margin-right: 0;
  }

  .page__related {
    max-width: 900px;
  }
}

/* Blockquotes */
blockquote {
  border-left: 3px solid var(--color-border) !important;
  padding-left: 1.25rem !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  font-style: normal;
  color: var(--color-text-light) !important;
  background: transparent;
  padding: 0.5rem 1.25rem;
}

/* Lists */
ul, ol {
  margin-bottom: 1.5rem;
  padding-left: 1.75rem;
}

li {
  margin-bottom: 0.5rem;
  line-height: 1.7;
}

/* Tables - Clean minimal */
table {
  font-size: 0.9rem !important;
  border-collapse: collapse;
  width: 100%;
  margin: 1.5rem 0;
  border: 1px solid var(--color-border);
}

th {
  background: #fafafa !important;
  font-weight: 600 !important;
  padding: 0.75rem 1rem !important;
  text-align: left;
  border-bottom: 1px solid var(--color-border) !important;
}

td {
  padding: 0.75rem 1rem !important;
  border-bottom: 1px solid var(--color-border) !important;
}

tr:last-child td {
  border-bottom: none !important;
}

/* Author bio */
.author__bio {
  font-size: 0.95rem !important;
  color: var(--color-text-light) !important;
  font-weight: 400;
  letter-spacing: -0.01em;
}

.author__name {
  font-weight: 600 !important;
  font-size: 1.1rem !important;
}

/* Post meta */
.page__meta {
  font-size: 0.875rem !important;
  color: var(--color-text-light) !important;
  font-weight: 400;
}

/* Archive items */
.archive__item-title {
  font-family: var(--font-sans) !important;
  font-weight: 600 !important;
  font-size: 1.25rem !important;
  letter-spacing: -0.02em;
  margin-bottom: 0.5rem !important;
}

.archive__item-excerpt {
  font-size: 0.95rem !important;
  color: var(--color-text-light) !important;
  line-height: 1.6;
}

/* Math equations */
.MathJax {
  font-size: 1.1em !important;
}

/* Table of Contents - Clean and minimal */
.toc {
  background: transparent !important;
  border: none !important;
  border-radius: 0 !important;
  padding: 0 0 0 1.25rem !important;
  margin-top: 0 !important;
}

/* TOC sidebar with full-height divider */
.sidebar__right {
  border-left: 1px solid var(--color-border) !important;
  padding-left: 3rem !important;
  padding-right: 2rem !important;
  margin-left: 3rem !important;
  width: 320px !important;
}

@media (min-width: 64em) {
  .sidebar__right {
    position: sticky !important;
    top: 2rem !important;
    align-self: flex-start !important;
    max-height: calc(100vh - 4rem) !important;
    overflow-y: auto !important;
  }
}

@media (max-width: 64em) {
  .sidebar__right {
    border-left: none !important;
    width: 100% !important;
    padding-left: 0 !important;
    margin-left: 0 !important;
  }
}

.toc .nav__title {
  background: transparent !important;
  border: none !important;
  font-size: 0.75rem !important;
  font-weight: 600 !important;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--color-text-light) !important;
  padding: 0 0 0.75rem 0 !important;
  margin: 0 !important;
}

.toc__menu {
  font-size: 0.875rem !important;
  line-height: 1.6;
}

.toc__menu ul {
  list-style: none;
  padding-left: 0 !important;
  margin: 0 !important;
}

.toc__menu li {
  margin-bottom: 0.5rem !important;
}

.toc__menu li ul {
  padding-left: 1rem !important;
  margin-top: 0.5rem !important;
}

.toc__menu a {
  color: var(--color-text-light) !important;
  border-bottom: none !important;
  padding: 0;
  display: block;
  transition: color 0.15s ease;
}

.toc__menu a:hover {
  color: var(--color-text) !important;
}

.toc__menu .active a {
  color: var(--color-accent) !important;
  font-weight: 500;
}

/* Sticky TOC positioning */
.sidebar__right.sticky {
  top: 2rem !important;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  body {
    font-size: 15px !important;
  }

  h1 {
    font-size: 1.75rem !important;
  }

  h2 {
    font-size: 1.375rem !important;
  }

  h3 {
    font-size: 1.125rem !important;
  }
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}

/* Focus states for accessibility */
a:focus,
button:focus {
  outline: 2px solid var(--color-accent);
  outline-offset: 2px;
}

/* Site title - Make it bigger and more prominent */
.site-title,
.masthead__inner-wrap .site-title {
  font-size: 1.5rem !important;
  font-weight: 600 !important;
  letter-spacing: -0.02em;
}

@media (max-width: 768px) {
  .site-title,
  .masthead__inner-wrap .site-title {
    font-size: 1.25rem !important;
  }
}
